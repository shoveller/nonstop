{
  "name": "@illuwa/aws-infra",
  "version": "1.0.0",
  "description": "AWS infrastructure package using CDK",
  "main": "cdk.js",
  "scripts": {
    "bootstrap": "cdk bootstrap && cdk deploy --timeout 20 --require-approval never --concurrency 10",
    "hotswap": "cdk deploy --hotswap --require-approval never --concurrency 10 --quiet",
    "deploy": "if aws cloudformation describe-stacks --stack-name CDKToolkit > /dev/null 2>&1; then pnpm hotswap; else pnpm bootstrap; fi",
    "destroy": "pnpm tsx ./delete-dns.ts && pnpx cdk destroy --force"
  },
  "keywords": [
    "aws",
    "cdk",
    "infrastructure"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@react-router/architect": "catalog:",
    "aws-cdk": "catalog:",
    "aws-cdk-lib": "catalog:",
    "constructs": "catalog:",
    "dotenv": "catalog:",
    "dotenv-cli": "catalog:",
    "esbuild": "catalog:",
    "tsx": "catalog:"
  }
}
